{
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"deno.enablePaths": ["supabase/functions"],
	"deno.lint": true,
	"deno.unstable": [
		"bare-node-builtins",
		"byonm",
		"sloppy-imports",
		"unsafe-proto",
		"webgpu",
		"broadcast-channel",
		"worker-options",
		"cron",
		"kv",
		"ffi",
		"fs",
		"http",
		"net"
	],
	"editor.codeActionsOnSave": {
		"source.fixAll.biome": "explicit",
		"source.organizeImports.biome": "explicit"
	},
	"editor.defaultFormatter": "biomejs.biome",
	"editor.fontSize": 12,
	"editor.tabSize": 2,
	"files.autoSave": "onFocusChange"
}
