# =============================================================================
# GENERAL
# =============================================================================
NEXT_PUBLIC_STORE_NAME="X-STORE"
NEXT_PUBLIC_SITE_URL="https://localhost:3000"

# =============================================================================
# DATABASE / AUTH
# =============================================================================
# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# EXTERNAL APIS
# =============================================================================
# Product Stream
PRODUCT_STREAM_API=https://your-product-stream-api.com
PRODUCT_STREAM_X_KEY=your-product-stream-x-key

# =============================================================================
# E-COMMERCE (SERVER-SIDE ONLY)
# =============================================================================
# Shopify Configuration (DO NOT USE NEXT_PUBLIC_*)
SHOPIFY_ACCESS_TOKEN=your-shopify-access-token
SHOPIFY_SHOP_NAME=your-shopify-shop-name
SHOPIFY_SHOP=your-shopify-shop.myshopify.com
SHOPIFY_TOKEN=your-shopify-token

# =============================================================================
# FEATURE FLAGS / DEBUG
# =============================================================================
# Obfuscation Control (set to 'true' to disable obfuscation for debugging)
DISABLE_OBFUSCATION=true

# MessagePack Configuration
NEXT_PUBLIC_ENABLE_MSGPACK=true

# =============================================================================
# ANALYTICS & MARKETING PIXELS
# =============================================================================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Facebook Pixel
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=123456789012345

# Google Tag Manager
NEXT_PUBLIC_GTM_CONTAINER_ID=GTM-XXXXXXX

# TikTok Pixel
NEXT_PUBLIC_TIKTOK_PIXEL_ID=XXXXXXXXXXXXXXXXX

# Pinterest Pixel
NEXT_PUBLIC_PINTEREST_TAG_ID=123456789012345

# Snapchat Pixel
NEXT_PUBLIC_SNAPCHAT_PIXEL_ID=xxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Microsoft Advertising (Bing)
NEXT_PUBLIC_MICROSOFT_UET_TAG_ID=12345678

# Twitter/X Pixel
NEXT_PUBLIC_TWITTER_PIXEL_ID=o1234

# Analytics Configuration
NEXT_PUBLIC_ANALYTICS_DEV=true
NEXT_PUBLIC_CONSENT_REQUIRED=true

# =============================================================================
# EXPERIENCE TRACKING
# =============================================================================
NEXT_PUBLIC_EXPERIENCE_TRACKING_ENABLED=true
NEXT_PUBLIC_EXPERIENCE_TRACKING_SAMPLE_RATE=1.0
NEXT_PUBLIC_EXPERIENCE_TRACKING_DEBUG=true

# =============================================================================
# CHAT WIDGET
# =============================================================================
NEXT_PUBLIC_CHAT_WIDGET_ENABLED=false
NEXT_PUBLIC_CHAT_WIDGET_AUTO_OPEN=false
NEXT_PUBLIC_CHAT_WIDGET_POSITION=bottom-right
NEXT_PUBLIC_CHAT_WIDGET_THEME=dark

# =============================================================================
# REDIS / CACHE (UPSTASH)
# =============================================================================
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token
