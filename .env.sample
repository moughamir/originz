#
# This file contains all the environment variables needed to run the application.
# Copy this file to .env.local and fill in the values for your environment.
#
# For production, you should set these environment variables in your hosting provider.

# =============================================================================
# GENERAL
# =============================================================================
# The name of your store, used in the site title and other places.
NEXT_PUBLIC_STORE_NAME="X-STORE"

# The public URL of your site, used for metadata and other links.
NEXT_PUBLIC_SITE_URL="http://localhost:3000"


# =============================================================================
# DATABASE / AUTH (SUPABASE)
# =============================================================================
# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"

# Supabase Anon Key (publicly available)
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# Supabase Service Role Key (secret, server-side only)
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"


# =============================================================================
# EXTERNAL APIS
# =============================================================================
# COSMOS API (product catalog)
NEXT_PUBLIC_COSMOS_API_BASE_URL="https://moritotabi.com"
COSMOS_API_KEY="your-cosmos-api-key"


# =============================================================================
# E-COMMERCE (SHOPIFY - SERVER-SIDE ONLY)
# =============================================================================
# Shopify Admin API Access Token (secret)
SHOPIFY_ACCESS_TOKEN="your-shopify-access-token"

# Your Shopify shop name (e.g., "my-awesome-store")
SHOPIFY_SHOP_NAME="your-shopify-shop-name"

# Your full Shopify shop domain
SHOPIFY_SHOP="your-shopify-shop.myshopify.com"


# =============================================================================
# FEATURES & WIDGETS
# =============================================================================
# Enable or disable the chat widget
NEXT_PUBLIC_CHAT_WIDGET_ENABLED=false


# =============================================================================
# CACHING (UPSTASH REDIS)
# =============================================================================
# Upstash Redis REST URL (for caching)
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"

# Upstash Redis REST Token (secret)
UPSTASH_REDIS_REST_TOKEN="your-redis-token"