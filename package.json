{
  "name": "originz",
  "version": "0.1.0a",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "check-types": "tsc --noemit",
    "start": "next start",
    "lint": "tsc --noemit && eslint .",
    "lint:fix": "eslint --fix app components contexts hooks lib utils middleware.ts next.config.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "snyk test",
    "performance:lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "performance:budget": "bundlesize",
    "accessibility:test": "pa11y http://localhost:3000",
    "i18n:extract": "next-translate-extract",
    "i18n:compile": "next-translate-compile"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@shopify/polaris-tokens": "^9.4.2",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.58.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.90.2",
    "@uidotdev/usehooks": "^2.4.1",
    "@upstash/redis": "^1.35.4",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.22",
    "geist": "^1.5.1",
    "isomorphic-dompurify": "^2.28.0",
    "js-cookie": "^3.0.5",
    "jsdom": "^27.0.0",
    "libphonenumber-js": "^1.12.23",
    "lucide-react": "^0.544.0",
    "msgpack-javascript": "^0.10.0",
    "next": "15.5.4",
    "next-themes": "^0.4.6",
    "react": "19.1.1",
    "react-cookie-consent": "^9.0.0",
    "react-dom": "19.1.1",
    "react-hook-form": "^7.63.0",
    "redis": "^5.8.3",
    "schema-dts": "^1.1.5",
    "sonner": "^2.0.7",
    "validator": "^13.12.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/eslint-plugin-next": "^15.5.4",
    "@playwright/test": "^1.48.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.19.18",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "autoprefixer": "^10.4.21",
    "bundlesize": "^0.18.2",
    "eslint": "^9.36.0",
    "eslint-config-next": "15.5.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^6.1.0",
    "eslint-plugin-testing-library": "^6.3.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.0.0",
    "msw": "^2.6.8",
    "next-translate": "^3.5.0",
    "pa11y": "^7.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "snyk": "^1.1308.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2"
  },
  "bundlesize": [
    {
      "path": ".next/static/chunks/pages/_app-*.js",
      "maxSize": "250kb"
    },
    {
      "path": ".next/static/chunks/pages/index-*.js",
      "maxSize": "200kb"
    }
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "app/**/*.{js,jsx,ts,tsx}",
      "components/**/*.{js,jsx,ts,tsx}",
      "lib/**/*.{js,jsx,ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}